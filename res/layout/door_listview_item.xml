<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/doorItemStateImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:src="@drawable/door_unregistered" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/doorItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Door state"
            android:textColor="#1a1a1a"
            android:textSize="20dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/doorItemStateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Door state"
            android:textColor="#1a1a1a"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/doorItemDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Door date"
            android:textColor="#4d4d4d" />
    </LinearLayout>

</LinearLayout>