<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/iv_memu_msg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:src="@drawable/btn_msg"
        android:onClick="onClickMenuMsg" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ImageView
        android:id="@+id/iv_menu_door"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:src="@drawable/btn_door" 
        android:onClick="onClickMenuDoor"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ImageView
        android:id="@+id/ic_menu_map"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:src="@drawable/btn_map" 
        android:onClick="onClickMenuMap"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.wisol.co.kr" 
        android:layout_gravity="bottom|center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/menu_debug_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
    </ScrollView>

</LinearLayout>